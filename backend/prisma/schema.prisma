generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model UtilsInfo {
  id        String      @id @default(uuid())
  document  String?        @unique
  cep       Int?
  city      String?
  state     String?
  avatar    String?
  age       Int?
  User      User[]
  UserOAuth UserOAuth[]

  @@map("util_info")
}

model User {
  id          String     @id @default(uuid())
  name        String
  email       String     @unique
  password    String
  utilsInfo   UtilsInfo? @relation(fields: [utilsInfoId], references: [id])
  role        Roles
  utilsInfoId String?

  @@map("users")
}

model UserOAuth {
  id          String     @id @default(uuid())
  name        String
  email       String     @unique
  utilsInfo   UtilsInfo? @relation(fields: [utilsInfoId], references: [id])
  role        Roles
  utilsInfoId String?

  @@map("users_oauth")
}

model Chatbot {
  id       String  @id @default(uuid())
  question String  @unique
  responde String?

  @@map("chatbot")
}

enum Roles {
  ADMIN
  USER
}
