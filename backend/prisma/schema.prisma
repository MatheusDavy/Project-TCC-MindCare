// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(uuid())
  name          String
  email         String        @unique
  password      String
  avatar        String?
  refresh_token RefreshToken?
  role Roles

  @@map("users")
}

model UserOAuth {
  id     String  @id @default(uuid())
  name   String
  email  String  @unique
  avatar String?
  role Roles

  @@map("users_oauth")
}

model RefreshToken {
  id        String @id @default(uuid())
  expiresIn Int
  userId    String @unique

  user User @relation(fields: [userId], references: [id])

  @@map("refresh_token")
}

model Chatbot {
  id       String  @id @default(uuid())
  question String  @unique
  responde String?

  @@map("chatbot")
}

enum Roles {
  ADMIN
  USER
}
